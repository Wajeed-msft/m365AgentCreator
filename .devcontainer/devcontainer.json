{
  "name": "M365 Agent Builder",
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20-bullseye",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "onCreateCommand": [
    "bash",
    ".devcontainer/prebuild-setup.sh"
  ],
  "updateContentCommand": "cd myagent && npm install",
  "postStartCommand": "echo 'Codespace ready! M365 Agent Builder environment is pre-configured.'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.vscode-typescript-next",
        "esbenp.prettier-vscode",
        "ms-vscode.vscode-json",
        "bradlc.vscode-tailwindcss"
      ],
      "settings": {
        "typescript.preferences.preferTypeOnlyAutoImports": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.formatOnSave": true
      }
    }
  },
  "forwardPorts": [3978, 56150, 3000],
  "portsAttributes": {
    "3978": {
      "label": "bot",
      "visibility": "public",
      "protocol": "http"
    },
    "56150": {
      "label": "playGroundUI", 
      "visibility": "public",
      "protocol": "http"
    },
    "3000": {
      "label": "playGroundModified",
      "visibility": "public", 
      "protocol": "http"
    }
  },
  "remoteEnv": {
    "NODE_ENV": "development",
    "CODESPACE_PREBUILD": "true"
  }
}

